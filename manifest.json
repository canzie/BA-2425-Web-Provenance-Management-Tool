{
    "manifest_version": 3,
    "name": "React Sidebar Extension",
    "version": "1.0",
    "permissions": ["contextMenus", "storage", "sidePanel", "tabs", "activeTab",  "<all_urls>", "scripting"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "dist/background.js",
      "persistent": false
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["dist/contentScript.js"]
        }
      ],
    "side_panel": {
      "default_path": "dist/index.html"
    },
    "action": {
      "default_title": "Open Sidebar"
    }
  }